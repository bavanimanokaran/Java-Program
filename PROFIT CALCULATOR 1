import java.io.*;
import java.util.*;
import java.text.*;
import java.math.*;
import java.util.regex.*;

public class Solution {
 public static void main(String[] args) {
     Scanner sc=new Scanner(System.in);
     int x=sc.nextInt();
     int b=sc.nextInt();
     int c=sc.nextInt();
     float z=(x*b)-(x*c)-100;
     System.out.println("Number of copies sold:"+x);
     System.out.println("Cost of each copy:"+b);
     System.out.println("Cost spent by agency on each newspaper:"+c);
     System.out.printf("The profit obtained is Rs.%.2f",z);
    
    }
}
